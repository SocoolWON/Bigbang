<div class="container">
  <h2>New Post</h2>
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.label "Title" %>
      <%= f.text_field :title, class: "form-control time", placeholder: "제목을 입력하세요."%>
    </div>
    <div class="form-group">
      <%= tinymce %>
      <%= f.label "Content" %>
      <%= f.text_area :content, class: "form-control tinymce", :rows => 15, :cols => 60 %>
    </div>
    <% if current_user %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    <% elsif current_teacher %>
      <%= f.hidden_field :teacher_id, :value => current_teacher.id %>
    <% else %>
    <% end %>
    <%= f.submit "Create", class: "btn btn-default" %>
  <% end %>
</div>
