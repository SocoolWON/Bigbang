<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "popup-form", :format => :json) do |f| %>

  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, class: "form-control form-white", placeholder: "Email Address", autofocus: true %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>
    <%= f.password_field :password, class: "form-control form-white", placeholder: "Password", autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <br>
    <%= f.password_field :password_confirmation, class: "form-control form-white", placeholder: "Password Again!", autofocus: true, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-submit" %>
  </div>
<% end %>

<%= render "users/shared/links" %>


