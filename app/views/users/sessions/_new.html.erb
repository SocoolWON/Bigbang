<%= form_for(resource, as: resource_name, url: user_session_path, :html => {:id => 'signin_form'}, :remote => true, :format => :json, class: "popup-form") do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "form-control form-white", placeholder: "Email Address", autofocus: true %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password, class: "form-control form-white", placeholder: "Password", autofocus: true, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="checkbox-holder text-left">
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-submit" %>
  </div>
<% end %>
  <div class="error_feedback">
  </div>
<%= render "users/shared/links" %>
