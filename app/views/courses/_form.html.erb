<div class="container">
  <%= flash[:notice]%> 
  <h2>New Class</h2>
  <%= form_for(@course) do |f| %>
    <div class="form-group">
      <%= f.label "Category" %>
      <%= f.select :category, ['Online', 'Offline'], {include_blank: "Please select one"}, {class: "form-control", onchange: "hideFunction()", id: "category"} %>
    </div>
    <div class="form-group location">
      <%= f.label "Location" %>
      <%= f.select :location, ['Jongno', 'Sinchon', 'Gangnam'], {include_blank: "Please select one"}, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label "Course type" %>
      <%= f.select :course_type, ['Conversation', 'Business', 'German Culture', 'German Exam'], {include_blank: "Please select one"}, class: "form-control" %>
    </div>
    <div class="form-group studentNumber">
      <%= f.label "Student number in the Class" %>
      <%= f.select :studentNumberInCourse, ['1', 'several'], {include_blank: "Please select one"}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Starting date(yyyy-mm-dd)" %>
      <%= f.text_field :started_at, class: "form-control", id: "datepicker" %>
    </div>
    <div class="form-group">
      <%= f.label "Course Days" %>
      <%= f.select :days, ["Mon","Tue","Wed","Thu","Fri","Sat","Sun"], {include_blank: false}, class: "form-control selectpicker", multiple: true %>
    </div>
    <div class="form-group">
      <%= f.label "Class time - Berlin clock" %>
      <%= f.text_field :german_time, class: "form-control time"%>
    </div>
    <div class="form-group">
      <%= f.label "Introduce the class" %>
      <%= f.text_area :introduction, class: "form-control", placehoder: "Please say something for what your student can expect in this class"%>
    </div>

    <%= f.hidden_field :teacher_id, :value => current_teacher.id %>
    <%= f.submit "Create", class: "btn btn-default" %>
  <% end %>
</div>






<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="/assets/selectpicker.js"></script>
