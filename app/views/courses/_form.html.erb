<script type="text/javascript">
function hideFunction() {
    var  value = $( "#category option:selected" ).text();
    if (value == "Offline") {
      $(".location").show();
      $(".studentNumber").hide();
    } else {
      $(".location").hide();
      $(".studentNumber").show();
    };
};
</script>
<script type="text/javascript">
$(document).ready(function() {
  $('#datepicker').datepicker({
    minDate: 'today',
    maxDate: '+1M',
    showButtonPanel: true,
    dateFormat: 'yy-mm-dd'
  });
});
$(document).ready(function() {
  $('.selectpicker').selectpicker({
    style: 'form-control',
    maxOptions: 2,
    size: 4
  });
});
$(document).ready(function() {
  $('.time').timepicker({
    timeFormat: 'HH:mm',
    interval: 30,
    minTime: '07:00',
    maxTime: '23:00pm',
    defaultTime: '7',
    startTime: '07:00',
    dynamic: false,
    dropdown: true,
    scrollbar: true
  });
});


</script>
